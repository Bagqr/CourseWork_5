<Window x:Class="BusParkManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему - Автобусный парк" 
        Height="639" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECF0F1">

    <Grid Margin="0,0,0,26">
        <Border Style="{StaticResource CardStyle}" 
                Width="320"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" Height="576">
            <StackPanel Margin="20">
                <!-- Заголовок -->
                <StackPanel Margin="0,0,0,20" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="🚌" 
                               FontSize="40" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="АВТОБУСНЫЙ ПАРК" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Авторизация" 
                               FontSize="14" 
                               Foreground="#666666"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Форма входа -->
                <StackPanel>
                    <!-- Поле логина -->
                    <TextBlock Text="Логин:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Text="admin"
                             Height="36"
                             FontSize="14"
                             Padding="8"
                             TabIndex="1"/>

                    <!-- Поле пароля -->
                    <TextBlock Text="Пароль:" 
                               FontWeight="SemiBold" 
                               Margin="0,12,0,4"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Password="admin"
                                 Height="36"
                                 FontSize="14"
                                 Padding="8"
                                 TabIndex="2"/>

                  <Button x:Name="LoginButton" 
                        Content="Войти" 
                        Style="{StaticResource PrimaryButton}"
                        Height="40"
                        FontSize="16"
                        Margin="0,24,0,12"
                        TabIndex="3"
                        Click="LoginButton_Click"/>
                    <!-- Дополнительные ссылки -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Button x:Name="RegisterButton"
                                Content="Регистрация"
                                Foreground="#007BFF"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="RegisterButton_Click"
                                Margin="0,0,10,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <TextBlock Text="{TemplateBinding Content}" 
                                               Foreground="{TemplateBinding Foreground}" 
                                               TextDecorations="Underline"/>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="ChangePasswordButton"
                                Content="Сменить пароль"
                                Foreground="#007BFF"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChangePasswordButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <TextBlock Text="{TemplateBinding Content}" 
                                               Foreground="{TemplateBinding Foreground}" 
                                               TextDecorations="Underline"/>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Информация для демо -->
                    <Border Background="#FFF3CD" 
                            BorderBrush="#FFEEBA" 
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,20,0,0"
                            Padding="10">
                        <StackPanel>
                            <TextBlock Text="Демо-доступ:" 
                                       FontWeight="Bold" 
                                       Foreground="#856404"/>
                            <TextBlock Text="Логин: admin" 
                                       FontSize="12" 
                                       Foreground="#856404"/>
                            <TextBlock Text="Пароль: admin" 
                                       FontSize="12" 
                                       Foreground="#856404"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>