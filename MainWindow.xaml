<Window x:Class="BusParkManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusParkManagementSystem"
        mc:Ignorable="d"
        Title="Автобусный парк - Информационная система" 
        Height="562" Width="1121"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка приложения -->
        <Border Grid.Row="0" 
                Background="#2C3E50"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="🚌" 
                               FontSize="24" 
                               Foreground="White"
                               VerticalAlignment="Center" 
                               Margin="0,0,12,0"/>
                </StackPanel>

                <!-- Пользователь -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Справка" 
                            Style="{StaticResource PrimaryButton}"
                            Width="80"
                            Height="40"
                            Margin="0,0,5,0"
                            Click="BtnHelp_Click"/>
                    <StackPanel Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="RoleIconText" 
                                       Text="👤" 
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0"/>
                            <TextBlock x:Name="CurrentUserText" 
                                       Text="Гость" 
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock x:Name="CurrentRoleText" 
                                   Text="Роль: Не авторизован" 
                                   Foreground="#BBBBBB"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="Выход" 
                            Style="{StaticResource DangerButton}"
                            Width="80"
                            Height="40"
                            Click="BtnExit_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель вкладок -->
        <TabControl x:Name="MainTabControl" 
                    Grid.Row="1" 
                    Margin="16,0,16,16"
                    Background="White"
                    BorderBrush="#2C3E50"
                    SelectionChanged="MainTabControl_SelectionChanged">
            <TabItem x:Name="TabBuses" Header="Автобусы" Visibility="Collapsed">
                <Frame x:Name="BusesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabRoutes" Header="Маршруты" Visibility="Collapsed">
                <Frame x:Name="RoutesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabEmployees" Header="Сотрудники" Visibility="Collapsed">
                <Frame x:Name="EmployeesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabTrips" Header="Рейсы" Visibility="Collapsed">
                <Frame x:Name="TripsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabReports" Header="Документы" Visibility="Collapsed">
                <Frame x:Name="ReportsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabLookups" Header="Справочники" Visibility="Collapsed">
                <Frame x:Name="LookupsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabQueries" Header="Запросы" Visibility="Collapsed">
                <Frame x:Name="QueriesFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabUsers" Header="Пользователи" Visibility="Collapsed">
                <Frame x:Name="UsersFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabPermissions" Header="Права доступа" Visibility="Collapsed">
                <Frame x:Name="PermissionsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem x:Name="TabSettings" Header="Разное" Visibility="Collapsed">
                <Frame x:Name="SettingsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>

        <!-- Основная область контента (оставляем как резерв для совместимости) -->
        <ContentControl x:Name="MainContent" 
                Grid.Row="2" 
                Margin="16"/>

        <!-- Статус бар -->
        <StatusBar Grid.Row="3" 
                   Background="#2C3E50" 
                   Foreground="White">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Center">
                <TextBlock x:Name="AccessInfoText" Text=""/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Версия 1.0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>