<UserControl x:Class="BusParkManagementSystem.Views.UserControls.TripsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <!-- Индикатор загрузки -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="20" 
                             Margin="0,0,0,10"/>
                <TextBlock Text="Загрузка данных..." 
                           Foreground="White" 
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <TextBlock Text="Планирование и управление рейсами" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,16"
                           Foreground="#2C3E50"/>

                <!-- Панель инструментов -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Действия с рейсом -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="Действия с рейсом:" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6"/>
                            <WrapPanel>
                                <Button Content="➕ Запланировать" 
                                        Style="{StaticResource SuccessButton}"
                                        Width="180" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding AddTripCommand}"/>

                                <Button Content="✏️ Редактировать" 
                                        Style="{StaticResource PrimaryButton}"
                                        Width="150" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding EditTripCommand}"/>

                                <Button Content="🗑️ Удалить" 
                                        Style="{StaticResource DangerButton}"
                                        Width="120" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding DeleteTripCommand}"/>
                            </WrapPanel>
                        </StackPanel>

                        <!-- Управление статусом -->
                        <StackPanel Margin="0,8,0,8">
                            <TextBlock Text="Управление статусом:" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6"/>
                            <WrapPanel>
                                <Button Content="▶️ Начать рейс" 
                                        Style="{StaticResource SuccessButton}"
                                        Width="150" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding StartTripCommand}"/>

                                <Button Content="✅ Завершить" 
                                        Style="{StaticResource SuccessButton}"
                                        Width="150" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding CompleteTripCommand}"/>

                                <Button Content="🚫 Отменить" 
                                        Style="{StaticResource DangerButton}"
                                        Width="120" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding CancelTripCommand}"/>
                            </WrapPanel>
                        </StackPanel>

                        <!-- Дополнительные действия -->
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Дополнительные действия:" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,6"/>
                            <WrapPanel>
                                <Button Content="🔄 Обновить" 
                                        Style="{StaticResource PrimaryButton}"
                                        Width="150" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding RefreshCommand}"/>

                                <Button Content="🧹 Очистить" 
                                        Style="{StaticResource PrimaryButton}"
                                        Width="120" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding ClearFiltersCommand}"/>

                                <Button Content="🔍 Применить фильтры" 
                                        Style="{StaticResource PrimaryButton}"
                                        Width="150" 
                                        Height="40"
                                        Margin="0,0,10,5"
                                        Command="{Binding ApplyFiltersCommand}"/>
                            </WrapPanel>
                        </StackPanel>

                        <!-- Фильтры -->
                        <Border Margin="0,16,0,0" 
                                BorderBrush="#e0e0e0" 
                                BorderThickness="0,1,0,0" 
                                Padding="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Фильтрация и поиск:" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <WrapPanel>
                                    <StackPanel Margin="0,0,20,0">
                                        <TextBlock Text="Статус:" 
                                                   FontSize="13"/>
                                        <ComboBox Width="150" 
                                                  ItemsSource="{Binding StatusFilters}"
                                                  SelectedItem="{Binding SelectedStatusFilter}"
                                                  Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,20,0">
                                        <TextBlock Text="Дата:" 
                                                   FontSize="13"/>
                                        <DatePicker Width="150" 
                                                    SelectedDate="{Binding SelectedDateFilter}"
                                                    Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Поиск:" 
                                                   FontSize="13"/>
                                        <TextBox Width="250" 
                                                 Height="28"
                                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="Поиск по номеру маршрута, гос. номеру или ФИО"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>
                                </WrapPanel>

                                <!-- Подсказка -->
                                <TextBlock Text="Для применения фильтров нажмите кнопку 'Применить фильтры'"
                                           FontSize="11"
                                           FontStyle="Italic"
                                           Margin="0,8,0,0"
                                           Foreground="#666666"/>

                                <!-- Информация о количестве -->
                                <Border Margin="0,12,0,0" 
                                        Background="#f5f5f5" 
                                        CornerRadius="4" 
                                        Padding="10,8">
                                    <TextBlock FontStyle="Italic"
                                               Foreground="#666666">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Отображается рейсов: {0} (всего: {1})">
                                                <Binding Path="Trips.Count"/>
                                                <Binding Path="AllTrips.Count"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Список рейсов -->
                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Список рейсов" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <DataGrid ItemsSource="{Binding Trips}" 
                                  SelectedItem="{Binding SelectedTrip}"
                                  Style="{StaticResource DefaultDataGridStyle}"
                                  Height="400"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                    Binding="{Binding Id}" 
                                                    Width="50"/>
                                <DataGridTextColumn Header="Дата" 
                                                    Binding="{Binding DateFormatted}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Маршрут" 
                                                    Binding="{Binding RouteNumber}" 
                                                    Width="70"/>
                                <DataGridTextColumn Header="Автобус" 
                                                    Binding="{Binding BusGovPlate}" 
                                                    Width="90"/>
                                <DataGridTextColumn Header="Модель" 
                                                    Binding="{Binding BusModel}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Водитель" 
                                                    Binding="{Binding DriverName}" 
                                                    Width="150"/>
                                <DataGridTextColumn Header="Кондуктор" 
                                                    Binding="{Binding ConductorName}" 
                                                    Width="150"/>
                                <DataGridTextColumn Header="Смена" 
                                                    Binding="{Binding ShiftName}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Выручка" 
                                                    Binding="{Binding RevenueInfo}" 
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Статус" 
                                                    Binding="{Binding Status}" 
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="запланирован">
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="в_пути">
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="завершен">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="отменен">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>