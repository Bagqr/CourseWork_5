<UserControl x:Class="BusParkManagementSystem.Views.UserControls.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <TextBlock Text="🔧 Разное" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,16"
                           Foreground="#2C3E50"/>

                <!-- Подпункт "Настройка" -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Настройка" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Язык интерфейса:" Margin="0,0,0,8"/>
                            <ComboBox x:Name="LanguageComboBox" 
                                      Width="200" 
                                      HorizontalAlignment="Left"
                                      SelectionChanged="LanguageComboBox_SelectionChanged">
                                <ComboBoxItem Content="Русский" Tag="ru"/>
                                <ComboBoxItem Content="English" Tag="en"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Размер шрифта:" Margin="0,0,0,8"/>
                            <WrapPanel>
                                <Button Content="A-" 
                                        Style="{StaticResource PrimaryButton}"
                                        Width="40" 
                                        Height="30"
                                        Margin="0,0,5,0"
                                        Click="FontSizeDecrease_Click"/>
                                <TextBlock x:Name="FontSizeText" 
                                           Text="14" 
                                           VerticalAlignment="Center"
                                           Margin="5,0"
                                           FontSize="14"/>
                                <Button Content="A+" 
                                        Style="{StaticResource PrimaryButton}"
                                        Width="40" 
                                        Height="30"
                                        Margin="5,0,0,0"
                                        Click="FontSizeIncrease_Click"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Тема оформления:" Margin="0,0,0,8"/>
                            <ComboBox x:Name="ThemeComboBox" 
                                      Width="200" 
                                      HorizontalAlignment="Left"
                                      SelectionChanged="ThemeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Светлая" Tag="light"/>
                                <ComboBoxItem Content="Темная" Tag="dark"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Подпункт "Сменить пароль" -->
                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="🔑 Сменить пароль" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Текущий пароль:" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="CurrentPasswordBox" 
                                         Width="250" 
                                         HorizontalAlignment="Left"
                                         Margin="0,0,0,10"/>

                            <TextBlock Text="Новый пароль:" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="NewPasswordBox" 
                                         Width="250" 
                                         HorizontalAlignment="Left"
                                         Margin="0,0,0,10"/>

                            <TextBlock Text="Подтверждение пароля:" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Width="250" 
                                         HorizontalAlignment="Left"
                                         Margin="0,0,0,15"/>

                            <Button Content="Сменить пароль" 
                                    Style="{StaticResource SuccessButton}"
                                    Width="150" 
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    Click="ChangePassword_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Информация о системе -->
                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Системная информация" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Версия приложения:" Margin="0,0,0,5"/>
                            <TextBlock Text="1.0.0" 
                                       FontWeight="SemiBold"
                                       Foreground="#27AE60"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Текущий пользователь:" Margin="0,0,0,5"/>
                            <TextBlock x:Name="CurrentUserText" 
                                       Text="Гость" 
                                       FontWeight="SemiBold"
                                       Foreground="#2980B9"
                                       Margin="0,0,0,10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>