<UserControl x:Class="BusParkManagementSystem.Views.UserControls.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BusParkManagementSystem.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:EmployeeViewModel/>
    </UserControl.DataContext>

    <Grid>
       
            <!-- Вкладка "Сотрудники" -->

        <Grid>
            <!-- Индикатор загрузки -->
            <Border Background="#80000000" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                            Panel.ZIndex="100">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Height="20" 
                                         Margin="0,0,0,10"/>
                    <TextBlock Text="Загрузка данных..." 
                                       Foreground="White" 
                                       FontSize="16"
                                       HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16">
                    <TextBlock Text="Управление сотрудниками" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,16"
                                       Foreground="#2C3E50"/>

                    <!-- Панель инструментов -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <!-- Первая строка кнопок -->
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Действия с сотрудниками:" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,6"/>
                                <WrapPanel>
                                    <Button Content="➕ Принять на работу" 
                                                    Style="{StaticResource SuccessButton}"
                                                    Width="180" 
                                                    Height="40"
                                                    Margin="0,0,10,5"
                                                    Command="{Binding AddEmployeeCommand}"/>

                                    <Button Content="✏️ Редактировать" 
                                                    Style="{StaticResource PrimaryButton}"
                                                    Width="140" 
                                                    Height="40"
                                                    Margin="0,0,10,5"
                                                    Command="{Binding EditEmployeeCommand}"/>

                                    <Button Content="🚫 Уволить" 
                                                    Style="{StaticResource DangerButton}"
                                                    Width="120" 
                                                    Height="40"
                                                    Margin="0,0,10,5"
                                                    Command="{Binding DismissEmployeeCommand}"/>

                                    <Button Content="🗑️ Удалить" 
                                                    Style="{StaticResource DangerButton}"
                                                    Width="120" 
                                                    Height="40"
                                                    Margin="0,0,10,5"
                                                    Command="{Binding DeleteEmployeeCommand}"/>
                                </WrapPanel>
                            </StackPanel>

                            <!-- Вторая строка кнопок -->
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock Text="Дополнительные действия:" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,6"/>
                                <WrapPanel>
                                    <Button Content="💰 Расчет зарплаты" 
                                                    Style="{StaticResource PrimaryButton}"
                                                    Width="160" 
                                                    Height="40"
                                                    Margin="0,0,10,5"
                                                    Command="{Binding CalculateSalaryCommand}"/>

                                    <Button Content="🔄 Обновить список" 
                                                    Style="{StaticResource PrimaryButton}"
                                                    Width="160" 
                                                    Height="40"
                                                    Margin="0,0,10,5"
                                                    Command="{Binding RefreshCommand}"
                                                    ToolTip="Обновить список сотрудников"/>

                                    <Button Content="🧹 Очистить фильтры" 
                                                    Style="{StaticResource PrimaryButton}"
                                                    Width="160" 
                                                    Height="40"
                                                    Margin="0,0,10,5"
                                                    Command="{Binding ClearFiltersCommand}"/>

                                </WrapPanel>
                            </StackPanel>

                            <!-- Фильтры -->
                            <Border Margin="0,16,0,0" 
                                            BorderBrush="#e0e0e0" 
                                            BorderThickness="0,1,0,0" 
                                            Padding="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="Фильтрация и поиск:" 
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,8"/>
                                    <WrapPanel>
                                        <StackPanel Margin="0,0,20,0">
                                            <TextBlock Text="Должность:" 
                                                               FontSize="13"/>
                                            <ComboBox Width="200" 
                                                              ItemsSource="{Binding PositionFilters}"
                                                              SelectedItem="{Binding SelectedPositionFilter}"
                                                              Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel Margin="0,0,20,0">
                                            <TextBlock Text="Статус:" 
                                                               FontSize="13"/>
                                            <ComboBox Width="150" 
                                                              ItemsSource="{Binding StatusFilters}"
                                                              SelectedItem="{Binding SelectedStatusFilter}"
                                                              Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel>
                                            <TextBlock Text="Поиск:" 
                                                               FontSize="13"/>
                                            <TextBox Width="250" 
                                                             Height="28"
                                                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="Поиск по ФИО, должности или улице"
                                                             Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>

                            <!-- Информация о количестве -->
                            <Border Margin="0,12,0,0" 
                                            Background="#f5f5f5" 
                                            CornerRadius="4" 
                                            Padding="10,8">
                                <TextBlock Text="{Binding Employees.Count, StringFormat='Найдено сотрудников: {0}'}" 
                                                   FontStyle="Italic"
                                                   Foreground="#666666"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Список сотрудников -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                        <DataGrid ItemsSource="{Binding Employees}" 
                                          SelectedItem="{Binding SelectedEmployee}"
                                          Style="{StaticResource DefaultDataGridStyle}"
                                          Height="350"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          IsReadOnly="True"
                                          CanUserResizeColumns="True">

                            <!-- Контекстное меню -->
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="✏️ Редактировать" 
                                                      Command="{Binding EditEmployeeCommand}"/>
                                    <MenuItem Header="🚫 Уволить" 
                                                      Command="{Binding DismissEmployeeCommand}"/>
                                    <MenuItem Header="🗑️ Удалить" 
                                                      Command="{Binding DeleteEmployeeCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="💰 Расчет зарплаты" 
                                                      Command="{Binding CalculateSalaryCommand}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                            Binding="{Binding Id}" 
                                                            Width="50"
                                                            CanUserResize="False"/>

                                <DataGridTextColumn Header="ФИО" 
                                                            Binding="{Binding FullName}" 
                                                            Width="200"/>

                                <DataGridTextColumn Header="Краткое имя" 
                                                            Binding="{Binding ShortName}" 
                                                            Width="120"/>

                                <DataGridTextColumn Header="Должность" 
                                                            Binding="{Binding PositionName}" 
                                                            Width="130"/>

                                <DataGridTextColumn Header="Зарплата" 
                                                            Binding="{Binding FormattedSalary}" 
                                                            Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Padding" Value="0,0,8,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Стаж" 
                                                            Binding="{Binding Experience}" 
                                                            Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Статус" 
                                                            Binding="{Binding Status}" 
                                                            Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Активен">
                                                    <Setter Property="Background" Value="#e8f5e9"/>
                                                    <Setter Property="Foreground" Value="#2e7d32"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Уволен">
                                                    <Setter Property="Background" Value="#ffebee"/>
                                                    <Setter Property="Foreground" Value="#c62828"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Дата рождения" 
                                                            Binding="{Binding BirthDate, StringFormat=dd.MM.yyyy}" 
                                                            Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Пол" 
                                                            Binding="{Binding Gender}" 
                                                            Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>