<UserControl x:Class="BusParkManagementSystem.BusStopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BusParkManagementSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <GroupBox Header="Справочник: Остановки" Grid.Row="0" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAdd" Content="Добавить" Margin="5" Padding="10,5" 
                        Click="BtnAdd_Click" IsEnabled="{Binding CanWrite}"/>
                <Button x:Name="BtnEdit" Content="Редактировать" Margin="5" Padding="10,5" 
                        Click="BtnEdit_Click" IsEnabled="{Binding CanEdit}"/>
                <Button x:Name="BtnDelete" Content="Удалить" Margin="5" Padding="10,5" 
                        Click="BtnDelete_Click" IsEnabled="{Binding CanDelete}"/>
                <Button x:Name="BtnRefresh" Content="Обновить" Margin="5" Padding="10,5" 
                        Click="BtnRefresh_Click"/>
                <TextBox x:Name="SearchBox" Margin="5" Padding="5" Width="200" 
                         VerticalAlignment="Center" Text="Поиск..." GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"/>
            </StackPanel>
        </GroupBox>
        
        <DataGrid x:Name="DataGrid" Grid.Row="1" Margin="5" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Название остановки" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>