<Window x:Class="BusParkManagementSystem.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Справка - Автобусный парк" 
        Height="562" 
        Width="1121"
        WindowStartupLocation="CenterOwner"
        Background="#ECF0F1">

    <Window.Resources>
        <!-- Стили кнопок, такие же как в MainWindow -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="BorderBrush" Value="#C0392B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="BorderBrush" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27AE60"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка окна (как в MainWindow) -->
        <Border Grid.Row="0" 
                Background="#2C3E50"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📚" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,12,0"/>
                    <TextBlock Text="СПРАВКА" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Кнопки навигации по разделам справки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="BtnContent" 
                            Content="Содержание" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="BtnContent_Click"
                            Tag="content"/>
                    <Button x:Name="BtnAbout" 
                            Content="О программе" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="BtnAbout_Click"
                            Tag="about"/>
                </StackPanel>

                <!-- Кнопка закрытия -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Закрыть" 
                            Style="{StaticResource DangerButton}"
                            Width="80"
                            Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основная область контента справки -->
        <Border Grid.Row="1" 
                Margin="16"
                Background="White"
                CornerRadius="4"
                BorderBrush="#DDDDDD"
                BorderThickness="1">

            <Grid>
                <!-- Содержание справки -->
                <ScrollViewer x:Name="ContentScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="Visible">
                    <StackPanel Margin="20">
                        <TextBlock Text="СОДЕРЖАНИЕ СПРАВКИ" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <!-- Автобусы -->
                        <Border BorderBrush="#3498DB" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15"
                                Background="#E8F4F8">
                            <StackPanel>
                                <TextBlock Text="🚌 АВТОБУСЫ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#2980B9"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" FontSize="14">
                                    • Просмотр списка автобусов<LineBreak/>
                                    • Добавление/редактирование автобусов<LineBreak/>
                                    • Изменение состояния автобусов<LineBreak/>
                                    • История техобслуживания<LineBreak/>
                                    • Фильтрация по модели и состоянию<LineBreak/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Сотрудники -->
                        <Border BorderBrush="#E74C3C" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15"
                                Background="#FDEDEC">
                            <StackPanel>
                                <TextBlock Text="👥 СОТРУДНИКИ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#C0392B"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" FontSize="14">
                                    • Учет персонала<LineBreak/>
                                    • Кадровые мероприятия<LineBreak/>
                                    • История работы сотрудников<LineBreak/>
                                    • Управление должностями<LineBreak/>
                                    • Расчет зарплаты<LineBreak/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Маршруты -->
                        <Border BorderBrush="#2ECC71" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15"
                                Background="#E8F8F5">
                            <StackPanel>
                                <TextBlock Text="📍 МАРШРУТЫ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" FontSize="14">
                                    • Управление маршрутами<LineBreak/>
                                    • График движения<LineBreak/>
                                    • Остановки маршрутов<LineBreak/>
                                    • Протяженность маршрутов<LineBreak/>
                                    • Время оборота<LineBreak/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Рейсы -->
                        <Border BorderBrush="#9B59B6" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15"
                                Background="#F4ECF7">
                            <StackPanel>
                                <TextBlock Text="🚍 РЕЙСЫ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#8E44AD"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" FontSize="14">
                                    • Планирование рейсов<LineBreak/>
                                    • Назначение водителей и кондукторов<LineBreak/>
                                    • Контроль выполнения рейсов<LineBreak/>
                                    • Учет выручки<LineBreak/>
                                    • Статусы рейсов<LineBreak/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Запросы и отчеты -->
                        <Border BorderBrush="#F39C12" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15"
                                Background="#FEF9E7">
                            <StackPanel>
                                <TextBlock Text="📊 ЗАПРОСЫ И ОТЧЕТЫ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#D35400"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" FontSize="14">
                                    • Статистические запросы<LineBreak/>
                                    • Финансовая отчетность<LineBreak/>
                                    • Аналитика работы парка<LineBreak/>
                                    • Отчеты по технике<LineBreak/>
                                    • Кадровые отчеты<LineBreak/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Условные обозначения -->
                        <Border BorderBrush="#7F8C8D" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,10"
                                Background="#F8F9F9">
                            <StackPanel>
                                <TextBlock Text="📋 УСЛОВНЫЕ ОБОЗНАЧЕНИЯ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#34495E"
                                           Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="✓" Grid.Row="0" Grid.Column="0" FontSize="14" Margin="0,0,10,5"/>
                                    <TextBlock Text="Операция выполнена успешно" Grid.Row="0" Grid.Column="1" FontSize="14" Margin="0,0,0,5"/>

                                    <TextBlock Text="⚠" Grid.Row="1" Grid.Column="0" FontSize="14" Margin="0,0,10,5"/>
                                    <TextBlock Text="Требуется внимание или подтверждение" Grid.Row="1" Grid.Column="1" FontSize="14" Margin="0,0,0,5"/>

                                    <TextBlock Text="✗" Grid.Row="2" Grid.Column="0" FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock Text="Операция отменена или ошибка" Grid.Row="2" Grid.Column="1" FontSize="14"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- О программе -->
                <ScrollViewer x:Name="AboutScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="Collapsed">
                    <StackPanel Margin="20">
                        <TextBlock Text="О ПРОГРАММЕ" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <!-- Информация о программе -->
                        <Border BorderBrush="#3498DB" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="15"
                                Margin="0,0,0,20"
                                Background="#E8F4F8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="🚌" FontSize="32" Margin="0,0,15,0"/>
                                    <StackPanel>
                                        <TextBlock Text="АВТОБУСНЫЙ ПАРК" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="#2C3E50"/>
                                        <TextBlock Text="Информационная система управления" 
                                                   FontSize="14"
                                                   Foreground="#7F8C8D"/>
                                    </StackPanel>
                                </StackPanel>

                                <Separator Background="#3498DB" Margin="0,0,0,15"/>

                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Версия:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
                                    <TextBlock Text="1.0.0" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Text="Дата сборки:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
                                    <TextBlock Text="Декабрь 2025" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Text="Разработчик:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
                                    <TextBlock Text="Курсовой проект" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Text="Лицензия:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="Учебное ПО" Grid.Row="3" Grid.Column="1"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Описание -->
                        <Border BorderBrush="#2ECC71" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="15"
                                Margin="0,0,0,20"
                                Background="#E8F8F5">
                            <StackPanel>
                                <TextBlock Text="📝 ОПИСАНИЕ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#27AE60"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" FontSize="14">
                                    Система предназначена для автоматизации деятельности муниципального автобусного парка, 
                                    обслуживающего внутригородские транспортные маршруты. 
                                    Обеспечивает полный цикл управления: от учета подвижного состава и сотрудников 
                                    до планирования рейсов и финансового учета.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Технологии -->
                        <Border BorderBrush="#9B59B6" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="15"
                                Margin="0,0,0,20"
                                Background="#F4ECF7">
                            <StackPanel>
                                <TextBlock Text="⚙️ ТЕХНОЛОГИИ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#8E44AD"
                                           Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Платформа:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
                                    <TextBlock Text=".NET Framework 4.7.2" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Text="Язык программирования:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
                                    <TextBlock Text="C#" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Text="Интерфейс:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
                                    <TextBlock Text="WPF (MVVM)" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Text="База данных:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
                                    <TextBlock Text="SQLite" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>

                                    <TextBlock Text="ORM:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="Dapper" Grid.Row="4" Grid.Column="1"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Контакты -->
                        <Border BorderBrush="#F39C12" 
                                BorderThickness="2" 
                                CornerRadius="4"
                                Padding="15"
                                Background="#FEF9E7">
                            <StackPanel>
                                <TextBlock Text="📞 КОНТАКТЫ" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="#D35400"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" FontSize="14">
                                    По вопросам работы программы обращайтесь:<LineBreak/>
                                    • Поддержка: support@buspark.local<LineBreak/>
                                    • Разработка: dev@buspark.local<LineBreak/>
                                    • Документация: docs.buspark.local
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Статус бар (как в MainWindow) -->
        <StatusBar Grid.Row="2" 
                   Background="#2C3E50" 
                   Foreground="White">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Справка"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Center">
                <TextBlock x:Name="HelpSectionText" Text="Раздел: Содержание"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Автобусный парк © 2024"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>