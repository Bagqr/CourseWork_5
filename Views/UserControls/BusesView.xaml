<UserControl x:Class="BusParkManagementSystem.Views.UserControls.BusesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <!-- Индикатор загрузки -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="20" 
                             Margin="0,0,0,10"/>
                <TextBlock Text="Загрузка данных..." 
                           Foreground="White" 
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <!-- Заголовок -->
                <TextBlock Text="Управление автобусами" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,16"
                           Foreground="#2C3E50"/>

                <!-- Панель инструментов -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Действия с автобусами" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <WrapPanel>
                            <Button Content="➕ Добавить автобус" 
                                    Style="{StaticResource SuccessButton}"
                                    Width="180" 
                                    Height="40"
                                    Command="{Binding AddBusCommand}"/>
                            <Button Content="✏️ Редактировать" 
                                    Style="{StaticResource PrimaryButton}"
                                    Width="150" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding EditBusCommand}"/>
                            <Button Content="🗑️ Удалить" 
                                    Style="{StaticResource DangerButton}"
                                    Width="120" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding DeleteBusCommand}"/>
                            <Button Content="🔄 Обновить" 
                                    Style="{StaticResource PrimaryButton}"
                                    Width="120" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding RefreshCommand}"/>
                            <Button Content="🧹 Очистить фильтры" 
                                    Style="{StaticResource PrimaryButton}"
                                    Width="160" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding ClearFiltersCommand}"/>
                        </WrapPanel>

                        <!-- Фильтры -->
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Фильтры" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <WrapPanel>
                                <StackPanel Margin="0,0,16,0">
                                    <TextBlock Text="Состояние:"/>
                                    <ComboBox Width="150" 
                                              ItemsSource="{Binding StateFilters}"
                                              SelectedItem="{Binding SelectedStateFilter}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,16,0">
                                    <TextBlock Text="Модель:"/>
                                    <ComboBox Width="200" 
                                              ItemsSource="{Binding ModelFilters}"
                                              SelectedItem="{Binding SelectedModelFilter}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="Поиск:"/>
                                    <TextBox Width="250" 
                                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                             ToolTip="Поиск по гос. номеру, инвентарному номеру или модели"/>
                                </StackPanel>
                            </WrapPanel>

                            <TextBlock Text="{Binding Buses.Count, StringFormat='Найдено автобусов: {0}'}" 
                                       FontStyle="Italic"
                                       Margin="0,8,0,0"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Список автобусов -->
                <Border Style="{StaticResource CardStyle}" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Список автобусов" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <DataGrid ItemsSource="{Binding Buses}" 
                                  SelectedItem="{Binding SelectedBus}"
                                  Style="{StaticResource DefaultDataGridStyle}"
                                  Height="400"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                    Binding="{Binding Id}" 
                                                    Width="50"/>
                                <DataGridTextColumn Header="Инв. номер" 
                                                    Binding="{Binding InventoryNumber}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Гос. номер" 
                                                    Binding="{Binding GovPlate}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Модель" 
                                                    Binding="{Binding ModelName}" 
                                                    Width="120"/>
                                <DataGridTextColumn Header="Цвет" 
                                                    Binding="{Binding ColorName}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Состояние" 
                                                    Binding="{Binding StateName}" 
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StateName}" Value="ИСПРАВЕН">
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StateName}" Value="В РЕМОНТЕ">
                                                    <Setter Property="Foreground" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StateName}" Value="НЕИСПРАВЕН">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StateName}" Value="СПИСАН">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Пробег" 
                                                    Binding="{Binding Mileage, StringFormat=N0}" 
                                                    Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Дата выпуска" 
                                                    Binding="{Binding ManufacturerDate, StringFormat=dd.MM.yyyy}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Капремонт" 
                                                    Binding="{Binding LastOverhaulDate, StringFormat=dd.MM.yyyy}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Водитель" 
                                                    Binding="{Binding DriverName}" 
                                                    Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>