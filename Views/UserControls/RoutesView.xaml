<UserControl x:Class="BusParkManagementSystem.Views.UserControls.RoutesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BusParkManagementSystem.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <!-- Индикатор загрузки -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="20" 
                             Margin="0,0,0,10"/>
                <TextBlock Text="Загрузка данных..." 
                           Foreground="White" 
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <!-- Заголовок -->
                <TextBlock Text="Управление маршрутами" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,16"
                           Foreground="#2C3E50"/>

                <!-- Панель инструментов -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Действия с маршрутами" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>

                        <WrapPanel>
                            <Button Content="➕ Добавить маршрут" 
                                    Style="{StaticResource SuccessButton}"
                                    Width="180" 
                                    Height="40"
                                    Command="{Binding AddRouteCommand}"/>
                            <Button Content="✏️ Редактировать" 
                                    Style="{StaticResource PrimaryButton}"
                                    Width="150" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding EditRouteCommand}"/>
                            <Button Content="🗑️ Удалить" 
                                    Style="{StaticResource DangerButton}"
                                    Width="120" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding DeleteRouteCommand}"/>
                            <Button Content="👁️ Детали" 
                                    Style="{StaticResource PrimaryButton}"
                                    Width="120" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding ViewDetailsCommand}"/>
                            <Button Content="🔄 Обновить" 
                                    Style="{StaticResource PrimaryButton}"
                                    Width="120" 
                                    Height="40"
                                    Margin="12,0,0,0"
                                    Command="{Binding RefreshCommand}"/>
                        </WrapPanel>

                        <!-- Поиск -->
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Поиск по номеру маршрута:"/>
                            <TextBox Width="250" 
                                     Margin="0,4,0,0"
                                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="{Binding Routes.Count, StringFormat='Найдено маршрутов: {0}'}" 
                                       FontStyle="Italic"
                                       Margin="0,8,0,0"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Основная информация -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Список маршрутов -->
                    <Border Grid.Column="0" 
                            Style="{StaticResource CardStyle}" 
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Список маршрутов" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>

                            <DataGrid ItemsSource="{Binding Routes}" 
                                      SelectedItem="{Binding SelectedRoute}"
                                      Style="{StaticResource DefaultDataGridStyle}"
                                      Height="300"
                                      AutoGenerateColumns="False"
                                      SelectionMode="Single"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding Id}" 
                                                        Width="50"/>
                                    <DataGridTextColumn Header="№ маршрута" 
                                                        Binding="{Binding RouteNumber}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Время оборота" 
                                                        Binding="{Binding TurnoverTime}" 
                                                        Width="100"/>
                                    <DataGridTextColumn Header="Расписание" 
                                                        Binding="{Binding Schedule}" 
                                                        Width="150"/>
                                    <DataGridTextColumn Header="Интервал" 
                                                        Binding="{Binding IntervalInfo}" 
                                                        Width="100"/>
                                    <DataGridTextColumn Header="Остановок" 
                                                        Binding="{Binding StopsCount}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Протяженность" 
                                                        Binding="{Binding TotalLength, StringFormat=N0}" 
                                                        Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- Остановки маршрута -->
                    <Border Grid.Column="1" 
                            Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Остановки маршрута" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="{Binding SelectedRoute.RouteInfo, StringFormat='Маршрут: {0}'}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <DataGrid ItemsSource="{Binding RouteStops}" 
                                      Style="{StaticResource DefaultDataGridStyle}"
                                      Height="250"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="№" 
                                                        Binding="{Binding Order}" 
                                                        Width="40"/>
                                    <DataGridTextColumn Header="Остановка" 
                                                        Binding="{Binding StopName}" 
                                                        Width="*"/>
                                    <DataGridTextColumn Header="Расстояние" 
                                                        Binding="{Binding DistanceFromStart, StringFormat=N0}" 
                                                        Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="{Binding RouteStops.Count, StringFormat='Остановок: {0}'}" 
                                       FontStyle="Italic"
                                       Margin="0,8,0,0"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>