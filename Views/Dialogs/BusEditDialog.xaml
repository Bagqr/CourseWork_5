<Window x:Class="BusParkManagementSystem.Views.Dialogs.BusEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="650" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Данные автобуса" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       Foreground="#2C3E50"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Инвентарный номер*"/>
                <TextBox Grid.Row="1" Grid.Column="0" 
                         Text="{Binding Bus.InventoryNumber, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Государственный номер*"/>
                <TextBox Grid.Row="3" Grid.Column="0" 
                         Text="{Binding Bus.GovPlate, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Модель*"/>
                <ComboBox Grid.Row="5" Grid.Column="0"
                          ItemsSource="{Binding Models}"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Bus.ModelId}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ModelName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Цвет*"/>
                <ComboBox Grid.Row="7" Grid.Column="0"
                          ItemsSource="{Binding Colors}"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Bus.ColorId}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ColorName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Состояние*"/>
                <ComboBox Grid.Row="9" Grid.Column="0"
                          ItemsSource="{Binding BusStates}"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Bus.StateId}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StateName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Row="10" Grid.Column="0" Text="Текущий водитель"/>
                <ComboBox Grid.Row="11" Grid.Column="0"
                          ItemsSource="{Binding Drivers}"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Bus.CurrentDriverId}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding FullName}"/>
                                <TextBlock Text="{Binding IsActive, StringFormat='Активен: {0}'}" 
                                           FontSize="10" 
                                           Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Row="0" Grid.Column="1" Text="Номер двигателя*"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Text="{Binding Bus.EngineNumber, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="1" Text="Номер шасси*"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         Text="{Binding Bus.ChasisNumber, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="4" Grid.Column="1" Text="Номер кузова*"/>
                <TextBox Grid.Row="5" Grid.Column="1" 
                         Text="{Binding Bus.BodyNumber, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="6" Grid.Column="1" Text="Дата выпуска*"/>
                <DatePicker Grid.Row="7" Grid.Column="1" 
                            SelectedDate="{Binding Bus.ManufacturerDate}"/>

                <TextBlock Grid.Row="8" Grid.Column="1" Text="Пробег (км)*"/>
                <TextBox Grid.Row="9" Grid.Column="1" 
                         Text="{Binding Bus.Mileage, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="10" Grid.Column="1" Text="Дата капремонта*"/>
                <DatePicker Grid.Row="11" Grid.Column="1" 
                            SelectedDate="{Binding Bus.LastOverhaulDate}"/>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#FFF2DEDE" 
                        BorderBrush="#E6B3B3" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="10,8"
                        Margin="0,0,0,12"
                        Visibility="{Binding HasErrors, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="Ошибки валидации:" 
                                   FontWeight="Bold" 
                                   Foreground="#A94442"/>
                        <ItemsControl ItemsSource="{Binding Errors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               Foreground="#A94442"
                                               TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Отмена" 
                            Width="100" 
                            Height="35"
                            Margin="0,0,12,0"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource DefaultButton}"/>

                    <Button Content="Сохранить" 
                            Width="100" 
                            Height="35"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource SuccessButton}"
                            IsEnabled="{Binding CanSave}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>