<Window x:Class="BusParkManagementSystem.Views.Dialogs.RouteEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:BusParkManagementSystem.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:IntConverter x:Key="IntConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Данные маршрута" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="#2C3E50"/>

        <TabControl Grid.Row="1">
            <TabItem Header="Основная информация">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Номер маршрута*" 
                                   Margin="0,8,10,8"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding Route.RouteNumber, UpdateSourceTrigger=PropertyChanged, 
                                        Converter={StaticResource IntConverter}}"
                                 Margin="0,8,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Время оборота (мин)*" 
                                   Margin="0,8,10,8"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding Route.TurnoverTime, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,8,0,8"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Первое отправление*" 
                                   Margin="0,8,10,8"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding Route.FirstDepartureTime, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,8,0,8"
                                 ToolTip="Формат: ЧЧ:ММ (например, 06:00)"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Последнее отправление*" 
                                   Margin="0,8,10,8"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding Route.LastDepartureTime, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,8,0,8"
                                 ToolTip="Формат: ЧЧ:ММ (например, 22:00)"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Интервал (мин)*" 
                                   Margin="0,8,10,8"/>
                        <TextBox Grid.Row="4" Grid.Column="1" 
                                 Text="{Binding Route.Interval, UpdateSourceTrigger=PropertyChanged, 
                                        Converter={StaticResource IntConverter}}"
                                 Margin="0,8,0,8"/>

                        <!-- График движения по типам дней -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="График движения:" 
                                   Margin="0,20,10,8"
                                   FontWeight="Bold"/>

                        <StackPanel Grid.Row="5" Grid.Column="1" 
                                    Margin="0,20,0,8">
                            <TextBlock Text="Будни: 06:00-10:00 каждые 15 мин, 10:00-16:00 каждые 20 мин, 16:00-22:00 каждые 15 мин"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="Выходные: 08:00-22:00 каждые 30 мин"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Остановки маршрута">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления остановками -->
                    <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="➕ Добавить остановку" 
                                Command="{Binding AddStopCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Height="30"
                                Margin="0,0,5,0"
                                ToolTip="Добавить выбранную остановку в маршрут"/>

                        <Button Content="➖ Удалить остановку" 
                                Command="{Binding RemoveStopCommand}"
                                Style="{StaticResource DangerButton}"
                                Height="30"
                                Margin="5,0,5,0"
                                ToolTip="Удалить выбранную остановку из маршрута"/>

                        <Button Content="⬆️ Вверх" 
                                Command="{Binding MoveStopUpCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Height="30"
                                Margin="5,0,5,0"
                                ToolTip="Переместить остановку выше"/>

                        <Button Content="⬇️ Вниз" 
                                Command="{Binding MoveStopDownCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Height="30"
                                Margin="5,0,0,0"
                                ToolTip="Переместить остановку ниже"/>
                    </WrapPanel>

                    <!-- Список остановок -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding RouteStops}"
                              SelectedItem="{Binding SelectedRouteStop}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Порядок" 
                                                Binding="{Binding Order}" 
                                                Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Остановка" 
                                                Binding="{Binding StopName}" 
                                                Width="*"/>

                            <DataGridTextColumn Header="Расстояние от начала (м)" 
                                                Binding="{Binding DistanceFromStart}" 
                                                Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Форма добавления новой остановки -->
                    <Border Grid.Row="2" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            Margin="0,10,0,0"
                            Padding="10"
                            Background="#FAFAFA">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Остановка:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>

                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding AvailableStops}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding SelectedStopId, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="False"
                                      Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="2" 
                                       Text="Расстояние (м):" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>

                            <TextBox Grid.Column="3" 
                                     Text="{Binding StopDistance, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalContentAlignment="Center"/>

                            <Button Grid.Column="4"
                                    Content="Добавить"
                                    Command="{Binding AddStopCommand}"
                                    Style="{StaticResource SuccessButton}"
                                    Margin="10,0,0,0"
                                    Width="80"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Блок ошибок и кнопки -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#FFF2DEDE" 
                    BorderBrush="#E6B3B3" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Padding="10,8"
                    Margin="0,0,0,12"
                    Visibility="{Binding HasErrors, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <TextBlock Text="Ошибки валидации:" 
                               FontWeight="Bold" 
                               Foreground="#A94442"/>
                    <ItemsControl ItemsSource="{Binding Errors}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           Foreground="#A94442"
                                           TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Width="100" 
                        Height="35"
                        Margin="0,0,12,0"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource DefaultButton}"/>

                <Button Content="Сохранить" 
                        Width="100" 
                        Height="35"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource SuccessButton}"
                        IsEnabled="{Binding CanSave}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>