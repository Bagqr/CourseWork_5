<Window x:Class="BusParkManagementSystem.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена пароля" 
        Height="614" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#ECF0F1">

    <Grid Margin="0,0,0,-6">
        <Border Style="{StaticResource CardStyle}" 
                Width="320"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel Margin="20">
                <!-- Заголовок -->
                <StackPanel Margin="0,0,0,20" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="🔐" 
                               FontSize="40" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Смена пароля" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Форма смены пароля -->
                <StackPanel>
                    <!-- Логин (только если смена без авторизации) -->
                    <TextBlock x:Name="UsernameLabel"
                               Text="Логин:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Height="36"
                             FontSize="14"
                             Padding="8"
                             TabIndex="1"/>

                    <!-- Старый пароль (если пользователь уже авторизован) -->
                    <TextBlock x:Name="OldPasswordLabel"
                               Text="Текущий пароль:" 
                               FontWeight="SemiBold" 
                               Margin="0,12,0,4"/>
                    <PasswordBox x:Name="OldPasswordBox" 
                                 Height="36"
                                 FontSize="14"
                                 Padding="8"
                                 TabIndex="2"/>

                    <!-- Новый пароль -->
                    <TextBlock Text="Новый пароль:" 
                               FontWeight="SemiBold" 
                               Margin="0,12,0,4"/>
                    <PasswordBox x:Name="NewPasswordBox" 
                                 Height="36"
                                 FontSize="14"
                                 Padding="8"
                                 TabIndex="3"/>

                    <!-- Подтверждение нового пароля -->
                    <TextBlock Text="Подтверждение нового пароля:" 
                               FontWeight="SemiBold" 
                               Margin="0,12,0,4"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Height="36"
                                 FontSize="14"
                                 Padding="8"
                                 TabIndex="4"/>

                    <!-- Требования к паролю -->
                    <Border Background="#E8F4FD" 
                            BorderBrush="#B6D4FE" 
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,12,0,0"
                            Padding="8">
                        <TextBlock Text="Пароль должен содержать минимум 6 символов" 
                                   FontSize="11" 
                                   Foreground="#0D6EFD"/>
                    </Border>

					<StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,24,0,0">
						<Button x:Name="ChangeButton"
								Content="Сменить пароль"
								Style="{StaticResource SuccessButton}"
								Width="140"
								Height="36"
								TabIndex="5"
								Click="ChangeButton_Click"/>
						<Button x:Name="CancelButton"
								Content="Отмена"
								Style="{StaticResource SecondaryButton}"
								Width="100"
								Height="36"
								TabIndex="6"
								Click="CancelButton_Click"/>
					</StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>